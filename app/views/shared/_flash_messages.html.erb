<% flash.each do |type, message| %>
  <% case type.to_s %>
  <% when 'notice', 'success' %>
    <div class="mb-6 rounded-2xl border border-green-200/50 bg-green-50/80 backdrop-blur-sm text-green-700 p-4">
      <div class="flex items-center space-x-3">
        <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="font-semibold"><%= message %></span>
      </div>
    </div>
  <% when 'alert', 'error' %>
    <div class="mb-6 rounded-2xl border border-red-200/50 bg-red-50/80 backdrop-blur-sm text-red-700 p-4">
      <div class="flex items-center space-x-3">
        <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="font-semibold"><%= message %></span>
      </div>
    </div>
  <% when 'warning' %>
    <div class="mb-6 rounded-2xl border border-yellow-200/50 bg-yellow-50/80 backdrop-blur-sm text-yellow-700 p-4">
      <div class="flex items-center space-x-3">
        <svg class="w-5 h-5 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.464 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
        </svg>
        <span class="font-semibold"><%= message %></span>
      </div>
    </div>
  <% else %>
    <div class="mb-6 rounded-2xl border border-blue-200/50 bg-blue-50/80 backdrop-blur-sm text-blue-700 p-4">
      <div class="flex items-center space-x-3">
        <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="font-semibold"><%= message %></span>
      </div>
    </div>
  <% end %>
<% end %>