<% flash.each_with_index do |(type, message), index| %>
  <% case type.to_s %>
  <% when 'notice', 'success' %>
    <div class="fixed right-4 z-50 max-w-sm w-full" 
         style="top: <%= 1 + (index * 5) %>rem;"
         data-controller="flash" 
         data-flash-auto-hide-value="true" 
         data-flash-delay-value="5000">
      <div class="rounded-2xl border border-green-200/50 bg-green-50/95 backdrop-blur-lg text-green-700 p-4 shadow-xl shadow-green-500/10 flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span class="text-sm font-medium"><%= message %></span>
        </div>
        <button type="button" 
                data-action="click->flash#dismiss"
                class="text-green-400 hover:text-green-600 transition-colors duration-200 flex-shrink-0 ml-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>
  <% when 'alert', 'error' %>
    <div class="fixed right-4 z-50 max-w-sm w-full" 
         style="top: <%= 1 + (index * 5) %>rem;"
         data-controller="flash" 
         data-flash-auto-hide-value="false">
      <div class="rounded-2xl border border-red-200/50 bg-red-50/95 backdrop-blur-lg text-red-700 p-4 shadow-xl shadow-red-500/10 flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <svg class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span class="text-sm font-medium"><%= message %></span>
        </div>
        <button type="button" 
                data-action="click->flash#dismiss"
                class="text-red-400 hover:text-red-600 transition-colors duration-200 flex-shrink-0 ml-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>
  <% when 'warning' %>
    <div class="fixed right-4 z-50 max-w-sm w-full" 
         style="top: <%= 1 + (index * 5) %>rem;"
         data-controller="flash" 
         data-flash-auto-hide-value="true" 
         data-flash-delay-value="7000">
      <div class="rounded-2xl border border-yellow-200/50 bg-yellow-50/95 backdrop-blur-lg text-yellow-700 p-4 shadow-xl shadow-yellow-500/10 flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <svg class="w-5 h-5 text-yellow-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.464 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
          <span class="text-sm font-medium"><%= message %></span>
        </div>
        <button type="button" 
                data-action="click->flash#dismiss"
                class="text-yellow-400 hover:text-yellow-600 transition-colors duration-200 flex-shrink-0 ml-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>
  <% else %>
    <div class="fixed right-4 z-50 max-w-sm w-full" 
         style="top: <%= 1 + (index * 5) %>rem;"
         data-controller="flash" 
         data-flash-auto-hide-value="true" 
         data-flash-delay-value="5000">
      <div class="rounded-2xl border border-blue-200/50 bg-blue-50/95 backdrop-blur-lg text-blue-700 p-4 shadow-xl shadow-blue-500/10 flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <svg class="w-5 h-5 text-blue-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span class="text-sm font-medium"><%= message %></span>
        </div>
        <button type="button" 
                data-action="click->flash#dismiss"
                class="text-blue-400 hover:text-blue-600 transition-colors duration-200 flex-shrink-0 ml-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>
  <% end %>
<% end %>