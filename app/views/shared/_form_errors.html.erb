<% if errors.any? %>
  <div class="mb-4 animate-fade-in-up">
    <div class="relative rounded-2xl bg-gradient-to-r from-red-50 to-rose-50 border border-red-200/50 shadow-sm">
      <!-- Content -->
      <div class="p-3 sm:p-4">
        <div class="flex items-start space-x-3">
          <!-- Icon -->
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-gradient-to-br from-red-500 to-rose-600 rounded-xl flex items-center justify-center">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          
          <!-- Error content -->
          <div class="flex-1 min-w-0">
            <!-- Header -->
            <div class="flex items-center space-x-2 mb-2">
              <h3 class="text-sm font-semibold text-red-700">
                入力エラー
              </h3>
              <span class="px-2 py-0.5 bg-red-100 text-red-600 text-xs font-medium rounded-full">
                <%= pluralize(errors.count, "件") %>
              </span>
            </div>
            
            <!-- Error list -->
            <div class="space-y-1">
              <% errors.full_messages.each do |message| %>
                <div class="flex items-center space-x-2">
                  <svg class="w-3 h-3 text-red-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                  <p class="text-xs sm:text-sm text-red-600 font-medium break-words"><%= message %></p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>