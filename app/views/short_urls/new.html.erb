<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-indigo-50 py-8 px-4">
  <div class="w-full max-w-4xl mx-auto">
    <!-- Header Section -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-2xl mb-4 shadow-lg">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.102m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
        </svg>
      </div>
      <h1 class="text-4xl font-bold bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-transparent mb-2">URL短縮ツール</h1>
      <p class="text-lg text-gray-600 max-w-md mx-auto">長いURLを瞬時に短縮して、共有を簡単にします</p>
    </div>

    <!-- Main Card -->
    <div class="max-w-2xl mx-auto bg-white/80 backdrop-blur-sm rounded-3xl shadow-xl border border-white/20 p-6 md:p-8 hover:shadow-2xl transition-all duration-300">
      <!-- Form Errors -->
      <div id="form-errors">
        <%= render_form_errors(@shorten) %>
      </div>

      <%= form_with model: @shorten, url: short_urls_path, local: false, data: { controller: "submitter" }, class: "space-y-6" do |f| %>
        <div class="space-y-2">
          <label class="block text-sm font-semibold text-gray-700 mb-2">📎 短縮したいURL</label>
          <%= f.url_field :long_url,
                placeholder: "https://example.com/very/long/url/path",
                class: "w-full px-4 py-3 rounded-2xl border-2 border-gray-200 focus:border-blue-500 focus:ring-4 focus:ring-blue-100 transition-all duration-200 text-base placeholder-gray-400 bg-gray-50/50" %>
          <%= render_field_error(@shorten.errors[:long_url]) %>
        </div>

        <div class="space-y-2">
          <label class="block text-sm font-semibold text-gray-700 mb-2">🏷️ カスタムスラッグ（オプション）</label>
          <%= f.text_field :slug,
                placeholder: "my-custom-link",
                class: "w-full px-4 py-3 rounded-2xl border-2 border-gray-200 focus:border-indigo-500 focus:ring-4 focus:ring-indigo-100 transition-all duration-200 text-base placeholder-gray-400 bg-gray-50/50" %>
          <p class="text-sm text-gray-500 flex items-center space-x-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>空白の場合は自動生成されます</span>
          </p>
        </div>

        <!-- QR Code Option -->
        <div class="space-y-2">
          <div class="flex items-center space-x-3 p-4 rounded-2xl bg-gradient-to-r from-purple-50 to-indigo-50 border border-purple-200/50">
            <%= f.check_box :include_qr_code,
                  class: "w-5 h-5 text-purple-600 border-2 border-purple-300 rounded focus:ring-purple-500 focus:ring-2 transition-all duration-200" %>
            <%= f.label :include_qr_code, "📱 QRコードも生成する",
                  class: "text-sm font-semibold text-purple-700 flex items-center space-x-2 cursor-pointer" %>
          </div>
          <p class="text-sm text-gray-500 flex items-center space-x-1 ml-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z"></path>
            </svg>
            <span>モバイルでの共有に便利です</span>
          </p>
        </div>

        <!-- Advanced Options Accordion -->
        <div class="border-t border-gray-200 pt-6" data-controller="accordion">
          <button type="button"
                  data-action="click->accordion#toggle"
                  class="w-full flex items-center justify-between text-left focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 rounded-lg p-2 hover:bg-gray-50 transition-colors duration-200">
            <h3 class="text-lg font-semibold text-gray-800 flex items-center space-x-2">
              <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <span>高度なオプション</span>
            </h3>
            <svg data-accordion-target="chevron"
                 class="w-5 h-5 text-gray-500 transition-transform duration-300"
                 fill="none"
                 stroke="currentColor"
                 viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>

          <div data-accordion-target="content" class="pt-4">
            <div class="space-y-4">
              <!-- Expiration Date Field -->
              <div class="space-y-2">
                <label class="block text-sm font-semibold text-gray-700 mb-2">⏰ 有効期限（オプション）</label>
                <%= f.datetime_local_field :valid_until,
                      class: "w-full px-4 py-3 rounded-2xl border-2 border-gray-200 focus:border-orange-500 focus:ring-4 focus:ring-orange-100 transition-all duration-200 text-base bg-gray-50/50" %>
                <p class="text-sm text-gray-500 flex items-center space-x-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span>指定した日時以降は短縮URLが無効になります（日本時間）</span>
                </p>
                <%= render_field_error(@shorten.errors[:valid_until]) %>
              </div>

              <!-- Max Visits Field -->
              <div class="space-y-2">
                <label class="block text-sm font-semibold text-gray-700 mb-2">👥 最大訪問回数（オプション）</label>
                <%= f.number_field :max_visits,
                      placeholder: "例: 100",
                      min: 1,
                      class: "w-full px-4 py-3 rounded-2xl border-2 border-gray-200 focus:border-green-500 focus:ring-4 focus:ring-green-100 transition-all duration-200 text-base bg-gray-50/50" %>
                <p class="text-sm text-gray-500 flex items-center space-x-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                  </svg>
                  <span>指定した回数のアクセス後は短縮URLが無効になります</span>
                </p>
                <%= render_field_error(@shorten.errors[:max_visits]) %>
              </div>

              <!-- Tags Field -->
              <div class="space-y-2" data-controller="tag-input" data-tag-input-max-tags-value="<%= Settings.system.short_url.max_tags %>" data-tag-input-max-length-value="<%= Settings.system.short_url.max_tag_length %>">
                <label class="block text-sm font-semibold text-gray-700 mb-2">🏷️ タグ（オプション）</label>

                <!-- タグ入力欄（タグを入力欄内に表示） -->
                <div class="relative">
                  <div data-tag-input-target="inputContainer"
                       class="min-h-[3rem] w-full px-4 py-3 rounded-2xl border-2 border-gray-200 focus-within:border-purple-500 focus-within:ring-4 focus-within:ring-purple-100 transition-all duration-200 bg-gray-50/50 flex flex-wrap items-center gap-2">
                    <!-- タグが動的に追加される場所 -->
                    <div data-tag-input-target="tagContainer" class="flex flex-wrap items-center gap-2"></div>

                    <!-- 実際の入力フィールド -->
                    <input type="text"
                           data-tag-input-target="input"
                           data-action="keydown->tag-input#handleKeydown focus->tag-input#onInputFocus blur->tag-input#onInputBlur"
                           placeholder="タグを入力してEnterキーで追加"
                           class="flex-1 min-w-[120px] border-none outline-none bg-transparent text-base placeholder-gray-400" />
                  </div>
                </div>

                <!-- 隠しフィールド（実際の送信データ） -->
                <%= f.hidden_field :tags, data: { tag_input_target: "hiddenInput" } %>

                <p class="text-sm text-gray-500 flex items-center space-x-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span>Enterキーでタグを確定（最大10個、各20文字以内）</span>
                </p>
                <!-- エラー表示エリア -->
                <div data-tag-input-target="errorContainer">
                  <%= render_field_error(@shorten.errors[:tags]) %>
                </div>
              </div>

              <!-- Device-specific URLs -->
              <div class="space-y-2" data-controller="device-redirect">
                <div class="mb-3">
                  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
                    <label class="block text-sm font-semibold text-gray-700">📱 デバイス別リダイレクト（オプション）</label>
                    <button type="button"
                            data-action="click->device-redirect#toggle"
                            data-device-redirect-target="toggleBtn"
                            class="px-3 py-1 text-xs bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-full transition-colors duration-200 self-start sm:self-auto">
                      有効にする
                    </button>
                  </div>
                </div>

                <div data-device-redirect-target="container" class="hidden space-y-4 p-4 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-2xl border border-blue-200/50 mt-4 w-full overflow-visible">
                  <p class="text-sm text-gray-600 mb-4 flex items-center space-x-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span>デバイスの種類に応じて異なるURLにリダイレクトできます</span>
                  </p>

                  <!-- Android URL -->
                  <div class="space-y-2">
                    <label class="block text-sm font-medium text-gray-700">🤖 Android用URL</label>
                    <%= f.url_field :android_url,
                          placeholder: "https://play.google.com/store/apps/details?id=...",
                          class: "w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-green-500 focus:ring-4 focus:ring-green-100 transition-all duration-200 text-base placeholder-gray-400 bg-white/80",
                          data: { device_redirect_target: "androidUrl" } %>
                  </div>

                  <!-- iOS URL -->
                  <div class="space-y-2">
                    <label class="block text-sm font-medium text-gray-700">🍎 iOS用URL</label>
                    <%= f.url_field :ios_url,
                          placeholder: "https://apps.apple.com/app/id...",
                          class: "w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-blue-500 focus:ring-4 focus:ring-blue-100 transition-all duration-200 text-base placeholder-gray-400 bg-white/80",
                          data: { device_redirect_target: "iosUrl" } %>
                  </div>

                  <!-- Desktop URL -->
                  <div class="space-y-2">
                    <label class="block text-sm font-medium text-gray-700">💻 Desktop用URL</label>
                    <%= f.url_field :desktop_url,
                          placeholder: "https://example.com/desktop-version",
                          class: "w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-purple-500 focus:ring-4 focus:ring-purple-100 transition-all duration-200 text-base placeholder-gray-400 bg-white/80",
                          data: { device_redirect_target: "desktopUrl" } %>
                  </div>

                  <!-- 隠しフィールド -->
                  <%= f.hidden_field :device_redirects_enabled, value: "false", data: { device_redirect_target: "enabledField" } %>
                </div>
              </div>

            </div>
          </div>
        </div>

        <button type="submit" data-submitter-target="btn"
                class="w-full bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-semibold py-3 px-6 rounded-2xl shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200 flex items-center justify-center space-x-2 disabled:opacity-60 disabled:cursor-not-allowed disabled:transform-none">
          <span data-submitter-target="label" class="text-base">🚀 短縮する</span>
          <svg data-submitter-target="spinner" class="hidden w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </button>
      <% end %>

      <!-- Results Area -->
      <div id="result" class="mt-8"></div>
    </div>
  </div>
</div>
