<!-- 編集モーダル -->
<div class="bg-white rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
    <!-- モーダルヘッダー -->
    <div class="flex items-center justify-between p-6 border-b border-gray-200">
      <div class="flex items-center space-x-3">
        <div class="flex-shrink-0">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
        </div>
        <div>
          <h3 class="text-xl font-bold text-gray-900">短縮URL編集</h3>
          <p class="text-sm text-gray-500"><%= short_url.short_url %></p>
        </div>
      </div>
      <button onclick="closeEditModal()" class="text-gray-400 hover:text-gray-600 transition-colors duration-200">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- モーダルボディ -->
    <div class="p-6">
      <%= form_with model: edit_form, url: short_url_path(short_url.short_code), method: :patch, local: false, class: "space-y-6" do |form| %>
        <!-- タイトル -->
        <div>
          <%= form.label :title, "タイトル", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :title,
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
                placeholder: "タイトルを入力（省略可）" %>
          <% if edit_form.errors[:title].any? %>
            <p class="mt-1 text-sm text-red-600"><%= edit_form.errors[:title].first %></p>
          <% end %>
        </div>

        <!-- 元のURL -->
        <div>
          <%= form.label :long_url, "元のURL", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.url_field :long_url,
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
                placeholder: "https://example.com" %>
          <% if edit_form.errors[:long_url].any? %>
            <p class="mt-1 text-sm text-red-600"><%= edit_form.errors[:long_url].first %></p>
          <% end %>
        </div>

        <!-- タグ -->
        <div>
          <%= form.label :tags, "タグ", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :tags,
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
                placeholder: "タグ1, タグ2, タグ3" %>
          <p class="mt-1 text-xs text-gray-500">カンマ区切りで複数のタグを設定できます（最大10個、各20文字以内）</p>
          <% if edit_form.errors[:tags].any? %>
            <p class="mt-1 text-sm text-red-600"><%= edit_form.errors[:tags].first %></p>
          <% end %>
        </div>

        <!-- 2カラムレイアウト -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- 有効期限 -->
          <div>
            <%= form.label :valid_until, "有効期限", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.datetime_local_field :valid_until,
                  class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" %>
            <% if edit_form.errors[:valid_until].any? %>
              <p class="mt-1 text-sm text-red-600"><%= edit_form.errors[:valid_until].first %></p>
            <% end %>
          </div>

          <!-- 訪問制限 -->
          <div>
            <%= form.label :max_visits, "訪問制限", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.number_field :max_visits,
                  class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
                  placeholder: "制限なし", min: 1 %>
            <% if edit_form.errors[:max_visits].any? %>
              <p class="mt-1 text-sm text-red-600"><%= edit_form.errors[:max_visits].first %></p>
            <% end %>
          </div>
        </div>

        <!-- カスタムスラッグ -->
        <div>
          <%= form.label :custom_slug, "カスタムスラッグ", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :custom_slug,
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
                placeholder: "カスタムスラッグ（英数字、ハイフン、アンダースコア）" %>
          <p class="mt-1 text-xs text-gray-500">3-50文字の英数字、ハイフン、アンダースコアのみ使用可能</p>
          <% if edit_form.errors[:custom_slug].any? %>
            <p class="mt-1 text-sm text-red-600"><%= edit_form.errors[:custom_slug].first %></p>
          <% end %>
        </div>

        <!-- エラーメッセージ -->
        <% if edit_form.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
              <svg class="w-5 h-5 text-red-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">入力内容を確認してください</h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc list-inside space-y-1">
                    <% edit_form.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- ボタン -->
        <div class="flex items-center justify-end space-x-3 pt-6 border-t border-gray-200">
          <button type="button" onclick="closeEditModal()"
                  class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200">
            キャンセル
          </button>
          <%= form.submit "更新",
                class: "px-6 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200" %>
        </div>
      <% end %>
    </div>
</div>