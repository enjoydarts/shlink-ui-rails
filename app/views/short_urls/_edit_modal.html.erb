<!-- 編集モーダル -->
<div class="bg-white rounded-2xl shadow-2xl max-w-2xl w-full mx-2 sm:mx-4 transform transition-all duration-300 max-h-[95vh] sm:max-h-[90vh] flex flex-col"
     id="edit-modal-content"
     style="transform: scale(1); opacity: 1;">

  <!-- Header -->
  <div class="flex items-center justify-between p-4 sm:p-6 border-b border-gray-100">
    <div class="flex items-center space-x-3">
      <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-lg font-semibold text-gray-900">短縮URL編集</h3>
        <p class="text-sm text-gray-500"><%= short_url.short_url %></p>
      </div>
    </div>
    <button onclick="closeEditModal()"
            class="text-gray-400 hover:text-gray-600 transition-colors duration-200">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>

  <!-- エラーメッセージ -->
  <% if edit_form.errors.any? %>
    <div class="mx-4 sm:mx-6 mt-4 bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex">
        <svg class="w-5 h-5 text-red-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">入力内容を確認してください</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% edit_form.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

    <!-- モーダルボディ -->
    <div class="p-4 sm:p-6 flex-1 overflow-y-auto">
      <%= form_with model: edit_form, url: short_url_path(short_url.short_code), method: :patch, local: false, id: "edit-short-url-form", class: "space-y-6", data: { controller: "edit-form", action: "submit->edit-form#submit" } do |form| %>
        <!-- タイトル -->
        <div>
          <%= form.label :title, "タイトル", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :title,
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
                placeholder: "タイトルを入力（省略可）" %>
          <% if edit_form.errors[:title].any? %>
            <p class="mt-1 text-sm text-red-600"><%= edit_form.errors[:title].first %></p>
          <% end %>
        </div>

        <!-- 元のURL -->
        <div>
          <%= form.label :long_url, "元のURL", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.url_field :long_url,
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
                placeholder: "https://example.com" %>
          <% if edit_form.errors[:long_url].any? %>
            <p class="mt-1 text-sm text-red-600"><%= edit_form.errors[:long_url].first %></p>
          <% end %>
        </div>

        <!-- タグ -->
        <div data-controller="tag-input" data-tag-input-max-tags-value="10" data-tag-input-max-length-value="20">
          <%= form.label :tags, "🏷️ タグ", class: "block text-sm font-medium text-gray-700 mb-2" %>

          <!-- タグ入力欄（タグを入力欄内に表示） -->
          <div class="relative">
            <div data-tag-input-target="inputContainer"
                 class="min-h-[3rem] w-full px-4 py-3 rounded-lg border border-gray-300 focus-within:border-blue-500 focus-within:ring-2 focus-within:ring-blue-100 transition-all duration-200 bg-white flex flex-wrap items-center gap-2">
              <!-- タグが動的に追加される場所 -->
              <div data-tag-input-target="tagContainer" class="flex flex-wrap items-center gap-2"></div>

              <!-- 実際の入力フィールド -->
              <input type="text"
                     data-tag-input-target="input"
                     data-action="keydown->tag-input#handleKeydown focus->tag-input#onInputFocus blur->tag-input#onInputBlur"
                     placeholder="タグを入力してEnterキーで追加"
                     class="flex-1 min-w-[120px] border-none outline-none bg-transparent text-base placeholder-gray-400" />
            </div>
          </div>

          <!-- 隠しフィールド（実際の送信データ） -->
          <%= form.hidden_field :tags, data: { tag_input_target: "hiddenInput" } %>

          <p class="mt-1 text-xs text-gray-500">Enterキーでタグを確定（最大10個、各20文字以内）</p>

          <!-- エラー表示エリア -->
          <div data-tag-input-target="errorContainer">
            <% if edit_form.errors[:tags].any? %>
              <p class="mt-1 text-sm text-red-600"><%= edit_form.errors[:tags].first %></p>
            <% end %>
          </div>
        </div>

        <!-- 2カラムレイアウト -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- 有効期限 -->
          <div>
            <%= form.label :valid_until, "有効期限", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.datetime_local_field :valid_until,
                  class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" %>
            <% if edit_form.errors[:valid_until].any? %>
              <p class="mt-1 text-sm text-red-600"><%= edit_form.errors[:valid_until].first %></p>
            <% end %>
          </div>

          <!-- 訪問制限 -->
          <div>
            <%= form.label :max_visits, "訪問制限", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.number_field :max_visits,
                  class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
                  placeholder: "制限なし", min: 1 %>
            <% if edit_form.errors[:max_visits].any? %>
              <p class="mt-1 text-sm text-red-600"><%= edit_form.errors[:max_visits].first %></p>
            <% end %>
          </div>
        </div>

        <!-- カスタムスラッグ -->
        <div>
          <%= form.label :custom_slug, "カスタムスラッグ", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :custom_slug,
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
                placeholder: "カスタムスラッグ（英数字、ハイフン、アンダースコア）" %>
          <p class="mt-1 text-xs text-gray-500">3-50文字の英数字、ハイフン、アンダースコアのみ使用可能</p>
          <% if edit_form.errors[:custom_slug].any? %>
            <p class="mt-1 text-sm text-red-600"><%= edit_form.errors[:custom_slug].first %></p>
          <% end %>
        </div>


      <% end %>
    </div>

    <!-- Footer -->
    <div class="flex items-center justify-end space-x-3 px-4 sm:px-6 py-4 bg-gray-50 rounded-b-2xl flex-shrink-0">
      <button type="button" onclick="closeEditModal()"
              class="px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors duration-200 font-medium">
        キャンセル
      </button>
      <button type="submit" form="edit-short-url-form" id="update-btn"
              class="min-w-[100px] px-6 py-2 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center">
        <span id="update-btn-text">更新</span>
        <svg id="update-btn-spinner" class="w-4 h-4 animate-spin hidden ml-2 flex-shrink-0" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
      </button>
    </div>
</div>