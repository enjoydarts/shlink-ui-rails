          <!-- „Ç®„É©„ÉºË°®Á§∫„Ç®„É™„Ç¢ -->
          <div data-tag-input-target="errorContainer">
            <% if edit_form.errors[:tags].any? %>
              <p class="mt-1 text-sm text-red-600"><%= edit_form.errors[:tags].first %></p>
            <% end %>
          </div>
        </div>

        <!-- 2„Ç´„É©„É†„É¨„Ç§„Ç¢„Ç¶„Éà -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- ÊúâÂäπÊúüÈôê -->
          <div>
            <%= form.label :valid_until, "ÊúâÂäπÊúüÈôê", class: "block text-sm font-medium text-gray-700 mb-2" %>
