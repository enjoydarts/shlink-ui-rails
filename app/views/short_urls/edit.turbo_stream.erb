<%= turbo_stream.replace "edit-modal" do %>
  <div id="edit-modal" class="fixed inset-0 z-50">
    <!-- Backdrop -->
    <div class="fixed inset-0 transition-opacity duration-300"
         style="background-color: rgba(0, 0, 0, 0.5);"
         onclick="closeEditModal()"></div>

    <!-- Modal Content -->
    <div class="fixed inset-0 flex items-start justify-center p-4 pt-8 md:pt-16 overflow-y-auto">
      <%= render "edit_modal", short_url: @short_url, edit_form: @edit_form %>
    </div>
  </div>
<% end %>