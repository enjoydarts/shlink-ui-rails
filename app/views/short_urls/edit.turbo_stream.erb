<%= turbo_stream.replace "edit-modal" do %>
  <div id="edit-modal" class="fixed inset-0 z-50">
    <!-- Backdrop -->
    <div class="fixed inset-0 bg-black bg-opacity-50 transition-opacity duration-300"
         onclick="closeEditModal()"></div>

    <!-- Modal Content -->
    <div class="fixed inset-0 flex items-center justify-center p-4">
      <%= render "edit_modal", short_url: @short_url, edit_form: @edit_form %>
    </div>
  </div>
<% end %>