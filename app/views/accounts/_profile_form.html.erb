<%= form_with model: @user, url: registration_path(resource_name), local: true, html: { method: :patch }, data: { controller: "submitter" }, class: "space-y-4" do |f| %>
  
  <!-- Name Field -->
  <div>
    <%= f.label :name, "üë§ #{t('accounts.profile_form.display_name')}", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :name, 
          placeholder: t('accounts.profile_form.display_name_placeholder'), 
          class: "w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-200" %>
    <p class="mt-1 text-sm text-gray-500"><%= t('accounts.profile_form.display_name_help') %></p>
  </div>

  <!-- Current Password (required for changes) -->
  <% unless @user.from_omniauth? %>
    <div>
      <%= f.label :current_password, "üîë #{t('accounts.profile_form.current_password')}", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.password_field :current_password, 
            autocomplete: "current-password",
            placeholder: t('accounts.profile_form.current_password_placeholder'),
            class: "w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-200" %>
      <p class="mt-1 text-sm text-gray-500"><%= t('accounts.profile_form.current_password_help') %></p>
    </div>
  <% else %>
    <!-- OAuth User Notice -->
    <div class="bg-blue-50 border border-blue-200 rounded-xl p-4">
      <div class="flex items-center">
        <svg class="w-5 h-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <span class="text-sm text-blue-700"><%= t('accounts.profile_form.oauth_user_notice') %></span>
      </div>
    </div>
  <% end %>

  <!-- Submit Button -->
  <div class="pt-2">
    <button type="submit" data-submitter-target="btn"
            class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 px-6 rounded-xl shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200 flex items-center justify-center space-x-2 disabled:opacity-60 disabled:cursor-not-allowed disabled:transform-none">
      <span data-submitter-target="label">‚úèÔ∏è <%= t('accounts.profile_form.update_profile') %></span>
      <svg data-submitter-target="spinner" class="hidden w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 714 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    </button>
  </div>
<% end %>