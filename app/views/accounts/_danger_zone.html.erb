<div class="space-y-6">
  
  <!-- Account Lock Status -->
  <% if @user.access_locked? %>
    <div class="bg-red-50 border border-red-200 rounded-xl p-4">
      <div class="flex items-center">
        <svg class="w-5 h-5 text-red-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
        </svg>
        <span class="text-sm font-medium text-red-700"><%= t('accounts.danger_zone.account_locked_message') %></span>
      </div>
      <p class="mt-2 text-sm text-red-600">
        <%= t('accounts.danger_zone.failed_attempts') %>: <%= @user.failed_attempts %> / 5<br>
        <%= t('accounts.danger_zone.locked_at') %>: <%= @user.locked_at&.strftime("%YÂπ¥%mÊúà%dÊó• %H:%M") %>
      </p>
      <%= link_to t('accounts.danger_zone.unlock_account'), new_user_unlock_path, 
            class: "mt-3 inline-flex items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-lg text-red-700 bg-red-50 hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-all duration-200" %>
    </div>
  <% else %>
    <div class="bg-green-50 border border-green-200 rounded-xl p-4">
      <div class="flex items-center">
        <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <span class="text-sm font-medium text-green-700"><%= t('accounts.danger_zone.account_not_locked') %></span>
      </div>
      <p class="mt-1 text-sm text-green-600"><%= t('accounts.danger_zone.failed_attempts') %>: <%= @user.failed_attempts %> / 5</p>
    </div>
  <% end %>

  <!-- Account Deletion -->
  <div class="border-t border-red-200 pt-6">
    <h4 class="text-lg font-semibold text-red-600 mb-4"><%= t('accounts.danger_zone.delete_account_title') %></h4>
    
    <div class="bg-red-50 border border-red-200 rounded-xl p-4 mb-4">
      <div class="flex items-start">
        <svg class="w-5 h-5 text-red-500 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.864-.833-2.634 0L5.232 15.5c-.77.833.192 2.5 1.732 2.5z"/>
        </svg>
        <div>
          <h5 class="text-sm font-medium text-red-800"><%= t('accounts.danger_zone.delete_warning_title') %></h5>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <li><%= t('accounts.danger_zone.delete_warning_items.data_loss') %></li>
              <li><%= t('accounts.danger_zone.delete_warning_items.url_deletion') %></li>
              <li><%= t('accounts.danger_zone.delete_warning_items.irreversible') %></li>
              <li><%= t('accounts.danger_zone.delete_warning_items.reregistration') %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <%= form_with model: @user, url: registration_path(resource_name), local: true, html: { method: :delete }, data: { controller: "submitter" }, class: "space-y-4" do |f| %>
      
      <!-- Current Password (required for deletion) -->
      <div>
        <%= f.label :current_password, "üîë #{t('accounts.danger_zone.current_password_delete')}", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.password_field :current_password, 
              autocomplete: "current-password",
              placeholder: t('accounts.danger_zone.current_password_delete_placeholder'),
              class: "w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-red-500 focus:ring-2 focus:ring-red-200 transition-all duration-200" %>
        <p class="mt-1 text-sm text-gray-500"><%= t('accounts.danger_zone.current_password_delete_help') %></p>
      </div>

      <!-- Delete Button -->
      <div class="pt-2">
        <button type="submit" data-submitter-target="btn"
                data-confirm="<%= t('accounts.danger_zone.delete_confirmation') %>"
                data-turbo-confirm="<%= t('accounts.danger_zone.delete_confirmation') %>"
                class="w-full bg-red-500 hover:bg-red-600 text-white font-semibold py-3 px-6 rounded-xl shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200 flex items-center justify-center space-x-2 disabled:opacity-60 disabled:cursor-not-allowed disabled:transform-none">
          <span data-submitter-target="label">üóëÔ∏è <%= t('accounts.danger_zone.delete_button') %></span>
          <svg data-submitter-target="spinner" class="hidden w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 714 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </button>
      </div>
    <% end %>
  </div>
</div>