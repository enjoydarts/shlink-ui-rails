<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-indigo-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 py-8 px-4">
  <div class="max-w-4xl mx-auto">
    <!-- Header Section -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-500 rounded-2xl mb-4 shadow-lg">
        <svg width="24" height="24" viewBox="0 0 24 24" class="text-white">
          <path fill="currentColor" d="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"/>
        </svg>
      </div>
      <h1 class="text-3xl font-bold text-gray-800 dark:text-gray-100 mb-2"><%= t('accounts.show.title') %></h1>
      <p class="text-lg text-gray-600 dark:text-gray-400"><%= t('accounts.show.subtitle') %></p>
    </div>


    <!-- User Info Card -->
    <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm rounded-3xl shadow-xl border border-white/20 dark:border-gray-700/20 p-6 mb-8">
      <div class="flex flex-col sm:flex-row items-center sm:items-start space-y-4 sm:space-y-0 sm:space-x-4">
        <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white text-xl font-bold shrink-0">
          <%= @user.display_name.first.upcase %>
        </div>
        <div class="text-center sm:text-left flex-1">
          <h2 class="text-xl sm:text-2xl font-bold text-gray-800 dark:text-gray-100"><%= @user.display_name %></h2>
          <p class="text-gray-600 dark:text-gray-400 break-all"><%= @user.email %></p>
          <div class="flex flex-wrap items-center justify-center sm:justify-start gap-2 mt-3">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300">
              <%= @user.role.humanize %>
            </span>
            <% if @user.confirmed? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300">
                ✓ <%= t('accounts.show.confirmed_status') %>
              </span>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-300">
                <%= t('accounts.show.unconfirmed_status') %>
              </span>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Tab Navigation Container -->
    <div data-controller="account-tabs" 
         data-account-tabs-active-value="basic"
         class="bg-white/60 dark:bg-gray-800/60 backdrop-blur-sm rounded-3xl shadow-xl border border-white/20 dark:border-gray-700/20 overflow-hidden">
      
      <!-- Tab Navigation -->
      <nav class="flex border-b border-gray-200/50 dark:border-gray-700/50 bg-gray-50/50 dark:bg-gray-900/50 rounded-t-3xl" 
           role="tablist" 
           aria-label="アカウント設定">
        <button data-account-tabs-target="tab" 
                data-tab="basic"
                data-action="click->account-tabs#switchTab keydown->account-tabs#keydown"
                role="tab"
                aria-selected="true"
                aria-controls="basic-panel"
                tabindex="0"
                class="flex-1 px-4 py-3 text-sm font-medium text-center border border-transparent border-r-gray-200/50 dark:border-r-gray-600/50 rounded-tl-3xl transition-all duration-200 focus:outline-none focus:border-blue-500 focus:bg-blue-50 dark:focus:bg-blue-900/30 focus:shadow-lg focus:rounded-tl-3xl">
          <div class="flex items-center justify-center space-x-2">
            <svg width="16" height="16" viewBox="0 0 24 24" class="flex-shrink-0">
              <path fill="currentColor" d="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"/>
            </svg>
            <span class="hidden sm:inline"><%= t('accounts.tabs.basic') %></span>
            <span class="sm:hidden">基本</span>
          </div>
        </button>
        
        <button data-account-tabs-target="tab" 
                data-tab="security"
                data-action="click->account-tabs#switchTab keydown->account-tabs#keydown"
                role="tab"
                aria-selected="false"
                aria-controls="security-panel"
                tabindex="-1"
                class="flex-1 px-4 py-3 text-sm font-medium text-center border border-transparent border-r-gray-200/50 dark:border-r-gray-600/50 transition-all duration-200 focus:outline-none focus:border-blue-500 focus:bg-blue-50 dark:focus:bg-blue-900/30 focus:shadow-lg">
          <div class="flex items-center justify-center space-x-2">
            <svg width="16" height="16" viewBox="0 0 24 24" class="flex-shrink-0">
              <path fill="currentColor" d="M12,17A2,2 0 0,0 14,15C14,13.89 13.1,13 12,13A2,2 0 0,0 10,15A2,2 0 0,0 12,17M18,8A2,2 0 0,1 20,10V20A2,2 0 0,1 18,22H6A2,2 0 0,1 4,20V10C4,8.89 4.9,8 6,8H7V6A5,5 0 0,1 12,1A5,5 0 0,1 17,6V8H18M12,3A3,3 0 0,0 9,6V8H15V6A3,3 0 0,0 12,3Z"/>
            </svg>
            <span class="hidden sm:inline"><%= t('accounts.tabs.security') %></span>
            <span class="sm:hidden">安全</span>
          </div>
        </button>
        
        <button data-account-tabs-target="tab" 
                data-tab="danger"
                data-action="click->account-tabs#switchTab keydown->account-tabs#keydown"
                role="tab"
                aria-selected="false"
                aria-controls="danger-panel"
                tabindex="-1"
                class="flex-1 px-4 py-3 text-sm font-medium text-center border border-transparent rounded-tr-3xl transition-all duration-200 focus:outline-none focus:border-blue-500 focus:bg-blue-50 dark:focus:bg-blue-900/30 focus:shadow-lg focus:rounded-tr-3xl">
          <div class="flex items-center justify-center space-x-2">
            <svg width="16" height="16" viewBox="0 0 24 24" class="flex-shrink-0">
              <path fill="currentColor" d="M9,3V4H4V6H5V19A2,2 0 0,0 7,21H17A2,2 0 0,0 19,19V6H20V4H15V3H9M7,6H17V19H7V6M9,8V17H11V8H9M13,8V17H15V8H13Z"/>
            </svg>
            <span class="hidden sm:inline"><%= t('accounts.tabs.danger') %></span>
            <span class="sm:hidden">危険</span>
          </div>
        </button>
      </nav>

      <!-- Tab Panels -->
      <div class="p-6 lg:p-8">
        <!-- Basic Settings Panel -->
        <div data-account-tabs-target="panel" 
             data-panel="basic"
             id="basic-panel"
             role="tabpanel"
             aria-labelledby="basic-tab"
             aria-hidden="false">
          <%= render 'tab_basic' %>
        </div>

        <!-- Security Settings Panel -->
        <div data-account-tabs-target="panel" 
             data-panel="security"
             id="security-panel"
             role="tabpanel"
             aria-labelledby="security-tab"
             aria-hidden="true"
             class="hidden">
          <%= render 'tab_security' %>
        </div>

        <!-- Danger Zone Panel -->
        <div data-account-tabs-target="panel" 
             data-panel="danger"
             id="danger-panel"
             role="tabpanel"
             aria-labelledby="danger-tab"
             aria-hidden="true"
             class="hidden">
          <%= render 'tab_danger' %>
        </div>
      </div>
    </div>

    <!-- アカウント削除モーダル -->
    <%= render 'delete_modal' %>

    <!-- Navigation -->
    <div class="mt-8 text-center">
      <%= link_to dashboard_path, class: "inline-flex items-center px-4 sm:px-6 py-3 border border-transparent text-sm sm:text-base font-medium rounded-full shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        <%= t('accounts.show.back_to_dashboard') %>
      <% end %>
    </div>
  </div>
</div>

<!-- バックアップコード表示モーダル - body直下に配置 -->
<div id="backup-codes-modal" class="hidden fixed inset-0 z-[9999] overflow-y-auto" data-controller="modal">
  <!-- 美しい背景オーバーレイ -->
  <div class="fixed inset-0 bg-gradient-to-br from-slate-900/80 via-gray-900/70 to-black/60 backdrop-blur-md transition-all duration-300"></div>
  <!-- 美しいパーティクルエフェクト -->
  <div class="fixed inset-0 opacity-40 pointer-events-none">
    <!-- 大きなパーティクル -->
    <div class="absolute top-1/4 left-1/4 w-40 h-40 bg-gradient-to-br from-blue-400/30 to-cyan-400/20 rounded-full blur-2xl animate-pulse"></div>
    <div class="absolute top-3/4 right-1/4 w-32 h-32 bg-gradient-to-br from-purple-400/25 to-pink-400/20 rounded-full blur-xl animate-pulse" style="animation-delay: 2s; animation-duration: 4s"></div>
    <div class="absolute top-1/2 left-3/4 w-28 h-28 bg-gradient-to-br from-indigo-400/30 to-blue-500/20 rounded-full blur-xl animate-pulse" style="animation-delay: 4s; animation-duration: 6s"></div>
    
    <!-- 小さなスパークル -->
    <div class="absolute top-1/6 right-1/3 w-4 h-4 bg-white/40 rounded-full animate-ping" style="animation-delay: 1s"></div>
    <div class="absolute bottom-1/3 left-1/6 w-3 h-3 bg-blue-300/50 rounded-full animate-ping" style="animation-delay: 3s"></div>
    <div class="absolute top-2/3 right-1/6 w-2 h-2 bg-purple-300/60 rounded-full animate-ping" style="animation-delay: 5s"></div>
    
    <!-- 浮遊する装飾 -->
    <div class="absolute top-1/3 left-1/2 w-16 h-16 border border-white/20 rounded-full animate-spin" style="animation-duration: 20s"></div>
    <div class="absolute bottom-1/4 right-1/2 w-12 h-12 border border-blue-300/30 rounded-full animate-spin" style="animation-duration: 15s; animation-direction: reverse"></div>
  </div>
  
  <!-- モーダルコンテンツ -->
  <div class="flex items-center justify-center min-h-full px-4 py-8 relative z-10">
    <div class="relative bg-white/95 dark:bg-gray-800/95 backdrop-blur-sm rounded-3xl shadow-2xl border border-white/20 dark:border-gray-700/30 w-full max-w-lg mx-auto transform transition-all duration-500 scale-100 opacity-100">
      <!-- ヘッダー -->
      <div class="flex items-center justify-between p-6 pb-4">
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 bg-orange-100 dark:bg-orange-900/30 rounded-xl flex items-center justify-center">
            <svg width="20" height="20" viewBox="0 0 24 24" class="text-orange-600">
              <path fill="currentColor" d="M12,1L3,5V11C3,16.55 6.84,21.74 12,23C17.16,21.74 21,16.55 21,11V5L12,1M12,7C13.4,7 14.8,8.6 14.8,10V11H16V16H8V11H9.2V10C9.2,8.6 10.6,7 12,7M12,8.2C11.2,8.2 10.4,8.7 10.4,10V11H13.6V10C13.6,8.7 12.8,8.2 12,8.2Z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100">バックアップコード</h3>
        </div>
        <button data-action="click->modal#close" class="text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 transition-colors p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      
      <!-- コンテンツ -->
      <div class="px-6 pb-6">
        <!-- 注意書き -->
        <div class="bg-gradient-to-r from-amber-50 to-orange-50 dark:from-amber-900/20 dark:to-orange-900/20 border border-amber-200 dark:border-amber-700/30 rounded-2xl p-4 mb-6">
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0 w-5 h-5 mt-0.5">
              <svg viewBox="0 0 24 24" class="text-amber-600">
                <path fill="currentColor" d="M13,13H11V7H13M12,17.3A1.3,1.3 0 0,1 10.7,16A1.3,1.3 0 0,1 12,14.7A1.3,1.3 0 0,1 13.3,16A1.3,1.3 0 0,1 12,17.3M15.73,3H8.27L3,8.27V15.73L8.27,21H15.73L21,15.73V8.27L15.73,3Z"/>
              </svg>
            </div>
            <div>
              <p class="text-sm font-semibold text-amber-800 dark:text-amber-200 mb-1">重要：安全な場所に保管してください</p>
              <p class="text-sm text-amber-700 dark:text-amber-300">
                これらのコードは認証アプリにアクセスできない場合の緊急用です。<br>
                各コードは一度のみ使用可能で、使用後は無効になります。
              </p>
            </div>
          </div>
        </div>
        
        <div data-controller="backup-codes" data-backup-codes-codes-value="<%= @user.two_factor_backup_codes.to_json %>">
          <% if @user.two_factor_enabled? && @user.two_factor_backup_codes.present? %>
            <!-- バックアップコード表示エリア -->
            <div class="bg-slate-50 dark:bg-gray-700 rounded-2xl p-5 mb-6 border border-slate-200 dark:border-gray-600">
              <div class="grid grid-cols-2 gap-3">
                <% @user.two_factor_backup_codes.each_with_index do |code, index| %>
                  <div class="bg-white dark:bg-gray-800 rounded-lg p-3 border border-slate-300 dark:border-gray-600 shadow-sm hover:shadow-md transition-shadow duration-200" 
                       data-code="<%= code %>">
                    <div class="text-xs text-gray-500 dark:text-gray-400 mb-1">#<%= index + 1 %></div>
                    <div class="font-mono text-sm font-semibold text-slate-800 dark:text-gray-100 tracking-wider select-all"><%= code %></div>
                  </div>
                <% end %>
              </div>
            </div>
            
            <!-- アクションボタン -->
            <div class="flex flex-col sm:flex-row gap-3">
              <button data-action="click->backup-codes#copyAllCodes"
                      class="flex-1 inline-flex items-center justify-center px-4 py-3 border border-slate-300 dark:border-gray-600 text-sm font-medium rounded-xl text-slate-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-slate-50 dark:hover:bg-gray-600 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                </svg>
                全てコピー
              </button>
              <button data-action="click->modal#close" 
                      class="flex-1 inline-flex items-center justify-center px-6 py-3 border border-transparent text-sm font-medium rounded-xl text-white bg-blue-600 hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 shadow-lg transition-all duration-200">
                閉じる
              </button>
            </div>
            
            <!-- ヒント -->
            <div class="mt-4 p-3 bg-blue-50 dark:bg-blue-900/20 rounded-lg border border-blue-200 dark:border-blue-700/30">
              <p class="text-xs text-blue-800 dark:text-blue-200">
                💡 <strong>ヒント:</strong> これらのコードをパスワードマネージャーや安全な場所に保存してください。スクリーンショットを撮る場合は、後で必ず削除してください。
              </p>
            </div>
            
          <% else %>
            <div class="text-center py-8">
              <div class="w-16 h-16 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.962-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                </svg>
              </div>
              <h4 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-2">バックアップコードがありません</h4>
              <p class="text-gray-600 dark:text-gray-300 mb-4">新しいバックアップコードを生成してください。</p>
              <button data-action="click->modal#close" 
                      class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 transition-colors duration-200">
                閉じる
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

