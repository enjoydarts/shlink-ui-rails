<%= form_with model: @user, url: registration_path(resource_name), local: true, html: { method: :patch }, data: { controller: "submitter" }, class: "space-y-4" do |f| %>
  
  <!-- New Password -->
  <div>
    <%= f.label :password, "üÜï #{t('accounts.password_form.new_password')}", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.password_field :password, 
          autocomplete: "new-password",
          placeholder: t('accounts.password_form.new_password_placeholder'),
          class: "w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 transition-all duration-200" %>
    <p class="mt-1 text-sm text-gray-500"><%= t('accounts.password_form.new_password_help') %></p>
  </div>

  <!-- Password Confirmation -->
  <div>
    <%= f.label :password_confirmation, "‚úÖ #{t('accounts.password_form.password_confirmation')}", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.password_field :password_confirmation, 
          autocomplete: "new-password",
          placeholder: t('accounts.password_form.password_confirmation_placeholder'),
          class: "w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 transition-all duration-200" %>
  </div>

  <!-- Current Password (required) -->
  <div>
    <%= f.label :current_password, "üîë #{t('accounts.password_form.current_password')}", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.password_field :current_password, 
          autocomplete: "current-password",
          placeholder: t('accounts.password_form.current_password_placeholder'),
          class: "w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 transition-all duration-200" %>
    <p class="mt-1 text-sm text-gray-500"><%= t('accounts.password_form.current_password_help') %></p>
  </div>

  <!-- Submit Button -->
  <div class="pt-2">
    <button type="submit" data-submitter-target="btn"
            class="w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-6 rounded-xl shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200 flex items-center justify-center space-x-2 disabled:opacity-60 disabled:cursor-not-allowed disabled:transform-none">
      <span data-submitter-target="label">üîê <%= t('accounts.password_form.update_password') %></span>
      <svg data-submitter-target="spinner" class="hidden w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 714 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    </button>
  </div>
<% end %>