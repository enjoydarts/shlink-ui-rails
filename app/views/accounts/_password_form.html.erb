<% if @user.from_omniauth? %>
  <!-- Google OAuth ユーザー向けメッセージ -->
  <div class="bg-blue-50 rounded-xl border border-blue-200 p-6 text-center">
    <div class="inline-flex items-center justify-center w-12 h-12 bg-blue-100 rounded-xl mb-4">
      <svg width="24" height="24" viewBox="0 0 24 24" class="text-blue-600">
        <path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
        <path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
        <path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
        <path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
      </svg>
    </div>
    <h3 class="text-lg font-semibold text-blue-800 mb-2">Google 認証アカウント</h3>
    <p class="text-sm text-blue-700">
      Google認証でログインしているため、パスワードの変更は不要です。<br>
      パスワード管理はGoogleアカウントで行われています。
    </p>
  </div>
<% else %>
<%= form_with model: @user, url: registration_path(resource_name), local: true, html: { method: :patch }, data: { controller: "submitter" }, class: "space-y-4" do |f| %>
  
  <!-- New Password -->
  <div>
    <%= f.label :password, "🆕 #{t('accounts.password_form.new_password')}", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.password_field :password, 
          autocomplete: "new-password",
          placeholder: t('accounts.password_form.new_password_placeholder'),
          class: "w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 transition-all duration-200" %>
    <p class="mt-1 text-sm text-gray-500"><%= t('accounts.password_form.new_password_help') %></p>
  </div>

  <!-- Password Confirmation -->
  <div>
    <%= f.label :password_confirmation, "✅ #{t('accounts.password_form.password_confirmation')}", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.password_field :password_confirmation, 
          autocomplete: "new-password",
          placeholder: t('accounts.password_form.password_confirmation_placeholder'),
          class: "w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 transition-all duration-200" %>
  </div>

  <!-- Current Password -->
  <div>
    <%= f.label :current_password, "🔑 #{t('accounts.password_form.current_password')}", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.password_field :current_password, 
          autocomplete: "current-password",
          placeholder: t('accounts.password_form.current_password_placeholder'),
          class: "w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 transition-all duration-200" %>
    <p class="mt-1 text-sm text-gray-500"><%= t('accounts.password_form.current_password_help') %></p>
  </div>

  <!-- Submit Button -->
  <div class="pt-2">
    <button type="submit" data-submitter-target="btn"
            class="w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-6 rounded-xl shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200 flex items-center justify-center space-x-2 disabled:opacity-60 disabled:cursor-not-allowed disabled:transform-none">
      <span data-submitter-target="label">🔐 <%= t('accounts.password_form.update_password') %></span>
      <svg data-submitter-target="spinner" class="hidden w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 714 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    </button>
  </div>
<% end %>
<% end %>