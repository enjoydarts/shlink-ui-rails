<!-- Performance設定 -->
<% if @settings_by_category['performance'] %>
  <div class="card p-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-xl font-bold text-gray-900">⚡ Performance設定</h2>
      <div class="flex space-x-2">
        <button type="button" onclick="resetCategory('performance')"
                class="bg-gray-500 hover:bg-gray-600 text-white px-3 py-1 rounded text-sm">
          リセット
        </button>
      </div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          キャッシュ有効期限（秒）
        </label>
        <% cache_ttl = @settings_by_category['performance']['performance.cache_ttl'] %>
        <%= form.number_field "settings[performance.cache_ttl]", 
            value: cache_ttl&.value,
            placeholder: "3600",
            min: "60",
            max: "86400",
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>


      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          一覧表示件数
        </label>
        <% per_page = @settings_by_category['performance']['performance.items_per_page'] %>
        <%= form.number_field "settings[performance.items_per_page]", 
            value: per_page&.value,
            placeholder: "20",
            min: "10",
            max: "100",
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          データベース接続タイムアウト（秒）
        </label>
        <% db_timeout = @settings_by_category['performance']['performance.database_timeout'] %>
        <%= form.number_field "settings[performance.database_timeout]", 
            value: db_timeout&.value,
            placeholder: "30",
            min: "5",
            max: "300",
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>


    </div>
  </div>
<% end %>