<!-- Email設定 -->
<% if @settings_by_category['email'] %>
  <div class="card p-6">
    <div class="flex justify-between items-center mb-4">
      <div>
        <h2 class="text-xl font-bold text-gray-900">📧 メール設定</h2>
        <p class="text-sm text-gray-600 mt-1">パスワードリセットや通知メールの送信設定</p>
      </div>
      <div class="flex space-x-2">
        <button type="button" onclick="testSettings('email')" 
                class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded text-sm">
          テスト
        </button>
        <button type="button" onclick="resetCategory('email')"
                class="bg-gray-500 hover:bg-gray-600 text-white px-3 py-1 rounded text-sm">
          リセット
        </button>
      </div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          メールアダプター
        </label>
        <% adapter = @settings_by_category['email']['email.adapter'] %>
        <%= form.select "settings[email.adapter]",
            options_for_select([
              ['Letter Opener (開発用)', 'letter_opener'],
              ['SMTP', 'smtp'],
              ['MailerSend', 'mailersend']
            ], adapter&.typed_value.to_s),
            {},
            { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          送信者アドレス
        </label>
        <% from_address = @settings_by_category['email']['email.from_address'] %>
        <%= form.email_field "settings[email.from_address]", 
            value: from_address&.value,
            placeholder: "noreply@yourdomain.com",
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        <p class="text-xs text-gray-500 mt-1">
          ユーザーが受信するメールの送信者として表示されます
        </p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          SMTPサーバー
        </label>
        <% smtp_address = @settings_by_category['email']['email.smtp_address'] %>
        <%= form.text_field "settings[email.smtp_address]", 
            value: smtp_address&.value,
            placeholder: "smtp.gmail.com",
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          SMTPポート
        </label>
        <% smtp_port = @settings_by_category['email']['email.smtp_port'] %>
        <%= form.number_field "settings[email.smtp_port]", 
            value: smtp_port&.value,
            placeholder: "587",
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          SMTPユーザー名
        </label>
        <% smtp_user = @settings_by_category['email']['email.smtp_user_name'] %>
        <%= form.text_field "settings[email.smtp_user_name]", 
            value: smtp_user&.value,
            placeholder: "username@gmail.com",
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div data-controller="password-toggle">
        <label class="block text-sm font-medium text-gray-700 mb-1">
          SMTPパスワード
        </label>
        <div class="relative">
          <% smtp_password = @settings_by_category['email']['email.smtp_password'] %>
          <%= form.password_field "settings[email.smtp_password]", 
              value: smtp_password&.value,
              placeholder: "アプリパスワード",
              data: { password_toggle_target: "input" },
              class: "w-full px-3 py-2 pr-10 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <button type="button" 
                  data-password-toggle-target="toggleButton"
                  data-action="click->password-toggle#toggle"
                  aria-label="パスワードを表示"
                  class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-600 focus:outline-none focus:text-gray-600 transition-colors duration-200">
            <!-- Show icon (eye) -->
            <svg data-password-toggle-target="showIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
            <!-- Hide icon (eye-off) -->
            <svg data-password-toggle-target="hideIcon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.878 9.878L3 3m6.878 6.878L15 15M21 3l-6 6"></path>
            </svg>
          </button>
        </div>
        <p class="text-xs text-gray-500 mt-1">
          Gmailの場合は<a href="https://support.google.com/accounts/answer/185833" target="_blank" class="text-blue-600 hover:text-blue-800">アプリパスワード</a>を使用してください
        </p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          SMTP認証方式
        </label>
        <% smtp_auth = @settings_by_category['email']['email.smtp_authentication'] %>
        <%= form.select "settings[email.smtp_authentication]",
            options_for_select([
              ['Plain', 'plain'],
              ['Login', 'login'],
              ['CRAM-MD5', 'cram_md5']
            ], smtp_auth&.typed_value.to_s),
            {},
            { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          STARTTLS自動有効化
        </label>
        <% starttls = @settings_by_category['email']['email.smtp_enable_starttls_auto'] %>
        <%= form.select "settings[email.smtp_enable_starttls_auto]",
            options_for_select([
              ['有効', 'true'],
              ['無効', 'false']
            ], starttls&.typed_value.to_s),
            {},
            { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
      </div>

      <div class="md:col-span-2" data-controller="password-toggle">
        <label class="block text-sm font-medium text-gray-700 mb-1">
          MailerSend APIキー
        </label>
        <div class="relative">
          <% mailersend_key = @settings_by_category['email']['email.mailersend_api_key'] %>
          <%= form.password_field "settings[email.mailersend_api_key]", 
              value: mailersend_key&.value,
              placeholder: "MailerSend API Key",
              data: { password_toggle_target: "input" },
              class: "w-full px-3 py-2 pr-10 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <button type="button" 
                  data-password-toggle-target="toggleButton"
                  data-action="click->password-toggle#toggle"
                  aria-label="APIキーを表示"
                  class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-600 focus:outline-none focus:text-gray-600 transition-colors duration-200">
            <!-- Show icon (eye) -->
            <svg data-password-toggle-target="showIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
            <!-- Hide icon (eye-off) -->
            <svg data-password-toggle-target="hideIcon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.878 9.878L3 3m6.878 6.878L15 15M21 3l-6 6"></path>
            </svg>
          </button>
        </div>
        <p class="text-xs text-gray-500 mt-1">
          <a href="https://www.mailersend.com" target="_blank" class="text-blue-600 hover:text-blue-800">MailerSend</a>から取得したAPIキーを入力してください
        </p>
      </div>
    </div>
  </div>
<% end %>