<script>
function confirmUserDeletion(userId, userName) {
  window.ConfirmationModal.show({
    title: '„É¶„Éº„Ç∂„Éº„ÅÆÂâäÈô§',
    message: `Êú¨ÂΩì„Å´„É¶„Éº„Ç∂„Éº„Äå${userName}„Äç„ÇíÂâäÈô§„Åó„Åæ„Åô„ÅãÔºü„Åì„ÅÆÊìç‰Ωú„ÅØÂèñ„ÇäÊ∂à„Åõ„Åæ„Åõ„Çì„ÄÇ`,
    confirmText: 'ÂâäÈô§„Åô„Çã',
    confirmClass: 'bg-red-600 hover:bg-red-700',
    onConfirm: () => {
      // „Éï„Ç©„Éº„É†„Çí‰ΩúÊàê„Åó„Å¶DELETE„É™„ÇØ„Ç®„Çπ„Éà„ÇíÈÄÅ‰ø°
      const form = document.createElement('form');
      form.method = 'POST';
      form.action = `/admin/users/${userId}`;
      
      const methodInput = document.createElement('input');
      methodInput.type = 'hidden';
      methodInput.name = '_method';
      methodInput.value = 'DELETE';
      
      const tokenInput = document.createElement('input');
      tokenInput.type = 'hidden';
      tokenInput.name = 'authenticity_token';
      tokenInput.value = document.querySelector('meta[name="csrf-token"]').content;
      
      form.appendChild(methodInput);
      form.appendChild(tokenInput);
      document.body.appendChild(form);
      form.submit();
    }
  });
}
</script>