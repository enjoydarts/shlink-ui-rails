<% content_for :title, "ジョブ管理" %>

<div class="max-w-7xl mx-auto px-3 sm:px-4 lg:px-8 py-4 sm:py-8">
  <div class="mb-4 sm:mb-8">
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">🔄 ジョブ管理</h1>
    <p class="mt-2 text-sm sm:text-base text-gray-600">バックグラウンドジョブの実行状況と詳細な統計情報</p>
  </div>

  <!-- 統計カード -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-blue-900">待機中</p>
          <p class="text-2xl font-bold text-blue-600"><%= @stats[:pending_jobs] %></p>
        </div>
      </div>
    </div>

    <div class="bg-green-50 border border-green-200 rounded-lg p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-green-600 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-green-900">実行中</p>
          <p class="text-2xl font-bold text-green-600"><%= @stats[:running_jobs] %></p>
        </div>
      </div>
    </div>

    <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-gray-600 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-900">完了</p>
          <p class="text-2xl font-bold text-gray-600"><%= @stats[:finished_jobs] %></p>
        </div>
      </div>
    </div>

    <div class="bg-red-50 border border-red-200 rounded-lg p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-red-600 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-red-900">失敗</p>
          <p class="text-2xl font-bold text-red-600"><%= @stats[:failed_jobs] %></p>
        </div>
      </div>
    </div>

    <div class="bg-purple-50 border border-purple-200 rounded-lg p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-purple-600 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-purple-900">アクティブワーカー</p>
          <p class="text-2xl font-bold text-purple-600"><%= @stats[:active_workers] %></p>
        </div>
      </div>
    </div>

    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-yellow-600 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-yellow-900">総ワーカー数</p>
          <p class="text-2xl font-bold text-yellow-600"><%= @stats[:total_workers] %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- 操作ボタン -->
  <div class="mb-8">
    <div class="bg-white border border-gray-200 rounded-lg p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">🎛️ ジョブ操作</h2>
      <div class="flex flex-wrap gap-4">
        <%= button_to "🗑️ 完了ジョブ削除", clear_finished_admin_solid_queue_index_path,
            method: :delete,
            class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors",
            confirm: "完了済みジョブを全て削除しますか？" %>

        <% if @stats[:failed_jobs] > 0 %>
          <%= button_to "🔄 失敗ジョブ一括再実行", retry_all_admin_solid_queue_index_path,
              method: :post,
              class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors",
              confirm: "全ての失敗ジョブを再実行しますか？" %>

          <%= button_to "🗑️ 失敗ジョブ一括削除", clear_all_admin_solid_queue_index_path,
              method: :delete,
              class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors",
              confirm: "全ての失敗ジョブを削除しますか？この操作は取り消せません。" %>
        <% end %>

        <%= link_to "🔄 画面更新", admin_solid_queue_index_path,
            class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors" %>
      </div>
    </div>
  </div>

  <!-- 失敗したジョブ -->
  <% if @stats[:failed_jobs] > 0 %>
    <div class="bg-white border border-gray-200 rounded-lg p-6 mb-8">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">❌ 失敗したジョブ</h2>
      <% failed_jobs = SolidQueue::FailedExecution.includes(:job).limit(10) %>
      <% if failed_jobs.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">ジョブ種類</th>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">キュー名</th>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">エラー内容</th>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">失敗日時</th>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">アクション</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% failed_jobs.each do |failed_execution| %>
                <% job = failed_execution.job %>
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-2 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900">
                      <%= job&.class_name || '(削除済みジョブ)' %>
                    </div>
                    <div class="text-sm text-gray-500">
                      ID: <%= job&.id || 'N/A' %>
                    </div>
                  </td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-500">
                    <%= job&.queue_name || 'N/A' %>
                  </td>
                  <td class="px-4 py-2">
                    <div class="text-sm text-red-600 max-w-xs overflow-hidden">
                      <%= truncate(failed_execution.error.to_s, length: 100) %>
                    </div>
                  </td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-500">
                    <%= failed_execution.created_at.strftime('%Y/%m/%d %H:%M') %>
                  </td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm font-medium">
                    <div class="flex space-x-2">
                      <% if job %>
                        <%= button_to "再実行", retry_admin_solid_queue_path(failed_execution),
                            method: :post,
                            class: "text-blue-600 hover:text-blue-900",
                            confirm: "ジョブ「#{job.class_name}」を再実行しますか？" %>
                      <% end %>
                      <%= button_to "削除", admin_solid_queue_path(failed_execution),
                          method: :delete,
                          class: "text-red-600 hover:text-red-900",
                          confirm: "ジョブ「#{job&.class_name || '削除済みジョブ'}」を削除しますか？" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- アクティブプロセス -->
    <div class="bg-white border border-gray-200 rounded-lg p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">🏃‍♂️ アクティブプロセス</h2>
      <% if @active_processes.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">ホスト</th>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">PID</th>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">種別</th>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">最終更新</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @active_processes.each do |process| %>
                <tr>
                  <td class="px-4 py-2 text-sm text-gray-900"><%= process.hostname %></td>
                  <td class="px-4 py-2 text-sm text-gray-900"><%= process.pid %></td>
                  <td class="px-4 py-2 text-sm text-gray-900">
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                      <%= process.kind %>
                    </span>
                  </td>
                  <td class="px-4 py-2 text-sm text-gray-500">
                    <%= time_ago_in_words(process.last_heartbeat_at) %>前
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m-6-4h6M7 20h10a2 2 0 002-2V6a2 2 0 00-2-2H7a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">アクティブなプロセスがありません</h3>
          <p class="mt-1 text-sm text-gray-500">Solid Queueワーカーが起動していない可能性があります。</p>
        </div>
      <% end %>
    </div>

    <!-- 最近のジョブ -->
    <div class="bg-white border border-gray-200 rounded-lg p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">📋 最近のジョブ</h2>
      <% if @recent_jobs.any? %>
        <div class="space-y-3">
          <% @recent_jobs.each do |job| %>
            <div class="border border-gray-200 rounded-lg p-3">
              <div class="flex items-center justify-between">
                <div class="flex-1">
                  <p class="text-sm font-medium text-gray-900"><%= job[:class_name] %></p>
                  <p class="text-xs text-gray-500">キュー: <%= job[:queue_name] %></p>
                </div>
                <div class="flex items-center space-x-2">
                  <% case job[:status] %>
                  <% when 'failed' %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                      失敗
                    </span>
                  <% when 'finished' %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                      完了
                    </span>
                  <% when 'running' %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                      実行中
                    </span>
                  <% when 'pending' %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                      待機中
                    </span>
                  <% else %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                      スケジュール済み
                    </span>
                  <% end %>
                  <span class="text-xs text-gray-500">
                    <%= time_ago_in_words(job[:created_at]) %>前
                  </span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">ジョブがありません</h3>
          <p class="mt-1 text-sm text-gray-500">まだジョブが実行されていません。</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  // 30秒ごとに自動更新
  setInterval(function() {
    window.location.reload();
  }, 30000);
</script>