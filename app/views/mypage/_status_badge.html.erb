<!-- Flexレイアウト: タグを左、ステータス・作成日時を右 -->
<div class="flex items-start justify-between gap-3">
  <!-- 左側: タグ -->
  <div class="flex-1 min-w-0">
    <% if short_url.tags_array.any? %>
      <div class="flex flex-wrap gap-1">
        <% short_url.tags_array.each do |tag| %>
          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800 border border-purple-200">
            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
            <%= tag %>
          </span>
        <% end %>
      </div>
    <% else %>
      <div class="text-gray-400 text-xs italic">タグなし</div>
    <% end %>
  </div>

  <!-- 右側: ステータスバッジと作成日時 -->
  <div class="flex flex-col items-end space-y-1 flex-shrink-0">
    <!-- Status Badge -->
    <div class="flex items-center">
      <% if short_url.active? %>
        <% if short_url.has_expiration? && short_url.valid_until < 24.hours.from_now %>
          <div class="inline-flex items-center space-x-1 px-2 py-1 bg-orange-500 text-white text-xs font-semibold rounded-md shadow-sm" title="まもなく期限切れ">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
            </svg>
            <span>期限間近</span>
          </div>
        <% elsif short_url.has_visit_limit? && short_url.remaining_visits <= 5 %>
          <div class="inline-flex items-center space-x-1 px-2 py-1 bg-orange-500 text-white text-xs font-semibold rounded-md shadow-sm" title="残り訪問回数わずか">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
            </svg>
            <span>残り少数</span>
          </div>
        <% else %>
          <div class="inline-flex items-center space-x-1 px-2 py-1 bg-green-500 text-white text-xs font-semibold rounded-md shadow-sm" title="有効">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <span>有効</span>
          </div>
        <% end %>
      <% else %>
        <% if short_url.expired? %>
          <div class="inline-flex items-center space-x-1 px-2 py-1 bg-red-500 text-white text-xs font-semibold rounded-md shadow-sm" title="有効期限切れ">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
            </svg>
            <span>期限切れ</span>
          </div>
        <% elsif short_url.visit_limit_reached? %>
          <div class="inline-flex items-center space-x-1 px-2 py-1 bg-purple-500 text-white text-xs font-semibold rounded-md shadow-sm" title="訪問制限到達">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
            </svg>
            <span>制限到達</span>
          </div>
        <% else %>
          <div class="inline-flex items-center space-x-1 px-2 py-1 bg-red-500 text-white text-xs font-semibold rounded-md shadow-sm" title="無効">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
            </svg>
            <span>無効</span>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- 作成日時 -->
    <div class="text-xs text-gray-500">
      <time datetime="<%= short_url.date_created.iso8601 %>">
        <%= short_url.date_created.strftime('%Y/%m/%d %H:%M') %>
      </time>
    </div>
  </div>
</div>