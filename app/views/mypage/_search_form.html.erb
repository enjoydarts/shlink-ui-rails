<!-- Search Form -->
<%= form_with url: mypage_path, method: :get, local: true, 
      class: "flex items-center space-x-2 w-full sm:w-auto" do |form| %>
  <div class="relative flex-1 sm:w-80">
    <%= form.text_field :search, 
          value: @search_query,
          placeholder: "タイトル、URL、短縮コード、タグで検索...",
          class: "w-full px-4 py-2 pl-10 pr-4 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm" %>
    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
      <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
    </div>
  </div>
  
  <%= form.submit "検索", 
        class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-xl transition-colors duration-200 text-sm" %>
  
  <% if @search_query.present? %>
    <%= link_to mypage_path, 
          class: "inline-flex items-center px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white font-medium rounded-xl transition-colors duration-200 text-sm" do %>
      クリア
    <% end %>
  <% end %>
<% end %>