<div class="border border-gray-200 rounded-2xl p-6 hover:shadow-lg transition-all duration-200 bg-white/50">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 h-full">
    <!-- URL Information -->
    <div class="lg:col-span-2 flex flex-col">
      <!-- Status Badge -->
      <div class="mb-3">
        <%= render 'status_badge', short_url: short_url %>
      </div>
      
      <!-- Title with Status Indicator -->
      <div class="mb-3 flex items-start space-x-3">
        <div class="flex-shrink-0 mt-1">
          <%= render 'status_indicator', short_url: short_url %>
        </div>
        <div class="flex-1 min-w-0">
          <h3 class="text-lg font-semibold text-gray-900 leading-tight line-clamp-2">
            <%= short_url.title.present? ? short_url.title : short_url.short_code %>
          </h3>
        </div>
      </div>
      
      <!-- Content Area (flex-1 to push creation date to bottom) -->
      <div class="flex-1">
        <!-- Short URL -->
        <div class="flex items-center space-x-2 mb-2">
          <span class="text-sm font-medium text-blue-600 bg-blue-50 px-3 py-1 rounded-lg">
            <%= short_url.short_url %>
          </span>
          <button onclick="copyToClipboard('<%= short_url.short_url %>')" 
                  class="p-1 text-gray-400 hover:text-blue-600 transition-colors duration-200" 
                  title="URLをコピー">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </button>
          <%= link_to qr_code_path(short_url.short_code), target: "_blank",
                class: "p-1 text-gray-400 hover:text-purple-600 transition-colors duration-200",
                title: "QRコードを表示" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z"></path>
            </svg>
          <% end %>
          <button onclick="deleteShortUrl('<%= short_url.short_code %>', '<%= short_url.title.present? ? short_url.title : short_url.short_code %>')" 
                  class="p-1 text-gray-400 hover:text-red-600 transition-colors duration-200"
                  title="削除">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
          </button>
        </div>
        
        <!-- Long URL -->
        <p class="text-sm text-gray-600 truncate mb-3">
          <span class="font-medium">元のURL:</span> <%= short_url.long_url %>
        </p>

      </div>
      
      <!-- Creation Date and Tags (Fixed at bottom) -->
      <div class="mt-4 pt-3 border-t border-gray-100">
        <div class="flex items-center justify-between gap-3">
          <!-- 左側: タグ（status_badgeから表示される場合はここは非表示） -->
          <div class="flex-1 min-w-0">
            <!-- タグは status_badge で表示されるため、ここでは非表示 -->
          </div>
          
          <!-- 右側: 作成日時 -->
          <div class="flex-shrink-0">
            <p class="text-xs text-gray-500">
              作成日: <%= short_url.date_created.strftime("%Y年%m月%d日 %H:%M") %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Statistics and Constraints -->
    <%= render 'url_statistics', short_url: short_url %>
  </div>
</div>