<div id="short-url-card-<%= short_url.short_code %>" class="border border-gray-200 dark:border-gray-700 rounded-2xl p-6 hover:shadow-lg transition-all duration-200 bg-white/50 dark:bg-gray-800/50">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 h-full">
    <!-- URL Information -->
    <div class="lg:col-span-2 flex flex-col">
      <!-- Status Badge -->
      <div class="mb-3">
        <%= render 'mypage/status_badge', short_url: short_url %>
      </div>
      
      <!-- Title with Status Indicator -->
      <div class="mb-3 flex items-start space-x-3">
        <div class="flex-shrink-0 mt-1">
          <%= render 'mypage/status_indicator', short_url: short_url %>
        </div>
        <div class="flex-1 min-w-0">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 leading-tight line-clamp-2">
            <%= short_url.title.present? ? short_url.title : short_url.short_code %>
          </h3>
        </div>
      </div>
      
      <!-- Content Area (flex-1 to push creation date to bottom) -->
      <div class="flex-1">
        <!-- Short URL -->
        <!-- URL表示とボタン群 -->
        <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-0 mb-2">
          <span class="text-sm font-medium text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/30 px-3 py-1 rounded-lg flex-shrink-0">
            <%= short_url.short_url %>
          </span>

          <!-- ボタン群（モバイルでは2行に分割） -->
          <div class="flex items-center space-x-1 sm:space-x-2 sm:ml-2 flex-wrap">
            <button onclick="copyToClipboard('<%= short_url.short_url %>')"
                    class="p-1 text-gray-400 dark:text-gray-500 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200"
                    title="URLをコピー">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
            </button>
            <%= link_to qr_code_path(short_url.short_code), target: "_blank",
                  class: "p-1 text-gray-400 dark:text-gray-500 hover:text-purple-600 dark:hover:text-purple-400 transition-colors duration-200",
                  title: "QRコード" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z"></path>
              </svg>
            <% end %>
            <button onclick="openIndividualAnalysis('<%= short_url.short_code %>')"
                    class="p-1 text-gray-400 dark:text-gray-500 hover:text-green-600 dark:hover:text-green-400 transition-colors duration-200"
                    title="統計">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </button>
            <button onclick="openEditModal('<%= short_url.short_code %>')"
                    class="p-1 text-gray-400 dark:text-gray-500 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200"
                    title="編集">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            </button>
            <button onclick="deleteShortUrl('<%= short_url.short_code %>', '<%= short_url.title.present? ? short_url.title : short_url.short_code %>')"
                    class="p-1 text-gray-400 dark:text-gray-500 hover:text-red-600 dark:hover:text-red-400 transition-colors duration-200"
                    title="削除">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </button>
          </div>
        </div>
        
        <!-- Long URL -->
        <p class="text-sm text-gray-600 dark:text-gray-400 truncate mb-3">
          <span class="font-medium">元のURL:</span> <%= short_url.long_url %>
        </p>

      </div>
      
      <!-- Creation Date and Tags (Fixed at bottom) -->
      <div class="mt-4 pt-3 border-t border-gray-100 dark:border-gray-700">
        <!-- モバイル: 縦配置、デスクトップ: 横配置 -->
        <div class="flex flex-col gap-2 md:flex-row md:items-center md:gap-3">
          <!-- 作成日時 -->
          <div class="flex-shrink-0">
            <p class="text-xs text-gray-500 dark:text-gray-400">
              作成日: <%= short_url.date_created.strftime("%Y年%m月%d日 %H:%M") %>
            </p>
          </div>
          
          <!-- タグ -->
          <div class="flex-1 min-w-0">
            <% if short_url.tags_array.any? %>
              <div class="flex flex-wrap gap-1">
                <% short_url.tags_array.each do |tag| %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-300 border border-purple-200 dark:border-purple-700">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                    </svg>
                    <%= tag %>
                  </span>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Statistics and Constraints -->
    <%= render 'mypage/url_statistics', short_url: short_url %>
  </div>
</div>