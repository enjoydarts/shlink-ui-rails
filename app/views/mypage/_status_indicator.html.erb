<% if short_url.active? %>
  <% if (short_url.has_expiration? && short_url.valid_until < 24.hours.from_now) || (short_url.has_visit_limit? && short_url.remaining_visits <= 5) %>
    <div class="w-3 h-3 bg-yellow-500 rounded-full shadow-sm border-2 border-yellow-200" title="要注意"></div>
  <% else %>
    <div class="w-3 h-3 bg-green-500 rounded-full shadow-sm border-2 border-green-200" title="有効"></div>
  <% end %>
<% elsif short_url.expired? %>
  <div class="w-3 h-3 bg-orange-500 rounded-full shadow-sm border-2 border-orange-200" title="期限切れ"></div>
<% elsif short_url.visit_limit_reached? %>
  <div class="w-3 h-3 bg-purple-500 rounded-full shadow-sm border-2 border-purple-200" title="制限到達"></div>
<% else %>
  <div class="w-3 h-3 bg-red-500 rounded-full shadow-sm border-2 border-red-200" title="無効"></div>
<% end %>