<% if page.current? %>
  <span class="relative inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-blue-600 rounded-lg cursor-default">
    <%= page %>
  </span>
<% else %>
  <%= link_to page, url, remote: remote, 
        rel: (page.next? ? 'next' : (page.prev? ? 'prev' : nil)),
        class: "relative inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 hover:text-blue-600 transition-colors duration-200" %>
<% end %>