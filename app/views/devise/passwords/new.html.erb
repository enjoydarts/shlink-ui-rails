<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-indigo-50 py-8 px-4">
  <div class="w-full max-w-md mx-auto">
    <!-- Header Section -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-500 rounded-2xl mb-4 shadow-lg">
        <svg width="24" height="24" viewBox="0 0 32 32" class="text-white">
          <!-- Chain link icon matching favicon -->
          <ellipse cx="11" cy="12" rx="4" ry="6" fill="none" stroke="currentColor" stroke-width="2" transform="rotate(-45 11 12)"/>
          <ellipse cx="21" cy="20" rx="4" ry="6" fill="none" stroke="currentColor" stroke-width="2" transform="rotate(-45 21 20)"/>
          <circle cx="16" cy="16" r="1.5" fill="currentColor"/>
        </svg>
      </div>
      <h1 class="text-3xl font-bold text-gray-800 mb-2">パスワードリセット</h1>
      <p class="text-lg text-gray-600">登録したメールアドレスを入力してください</p>
    </div>

    <!-- Main Card -->
    <div class="bg-white/80 backdrop-blur-sm rounded-3xl shadow-xl border border-white/20 p-8 md:p-10 hover:shadow-2xl transition-all duration-300">
      <!-- Error Messages -->
      <%= render_form_errors(resource) %>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: { controller: "submitter" }, class: "space-y-6") do |f| %>
        
        <!-- Email Field -->
        <div class="space-y-3">
          <%= f.label :email, "📧 メールアドレス", class: "block text-sm font-semibold text-gray-700 mb-3" %>
          <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email",
                placeholder: "your-email@example.com",
                class: "w-full px-5 py-4 rounded-2xl border-2 border-gray-200 focus:border-blue-500 focus:ring-4 focus:ring-blue-100 transition-all duration-200 text-base placeholder-gray-400 bg-gray-50/50" %>
        </div>

        <!-- Submit Button -->
        <div class="pt-4">
          <button type="submit" data-submitter-target="btn"
                  class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 px-6 rounded-2xl shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200 flex items-center justify-center space-x-2 disabled:opacity-60 disabled:cursor-not-allowed disabled:transform-none">
            <span data-submitter-target="label" class="text-base">🔄 パスワードリセット送信</span>
            <svg data-submitter-target="spinner" class="hidden w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 714 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </button>
        </div>
      <% end %>

      <!-- Links -->
      <div class="mt-8 text-center space-y-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
