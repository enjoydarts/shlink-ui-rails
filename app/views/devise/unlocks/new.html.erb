<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-indigo-50 py-8 px-4">
  <div class="w-full max-w-md mx-auto">
    <!-- Header Section -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-amber-500 rounded-2xl mb-4 shadow-lg">
        <svg width="24" height="24" viewBox="0 0 24 24" class="text-white">
          <path fill="currentColor" d="M12,17A2,2 0 0,0 14,15C14,13.89 13.1,13 12,13A2,2 0 0,0 10,15A2,2 0 0,0 12,17M18,8A2,2 0 0,1 20,10V20A2,2 0 0,1 18,22H6A2,2 0 0,1 4,20V10C4,8.89 4.9,8 6,8H7V6A5,5 0 0,1 12,1A5,5 0 0,1 17,6V8H18M12,3A3,3 0 0,0 9,6V8H15V6A3,3 0 0,0 12,3Z"/>
        </svg>
      </div>
      <h1 class="text-3xl font-bold text-gray-800 mb-2"><%= t('devise.unlocks.new.title') %></h1>
      <p class="text-lg text-gray-600"><%= t('devise.unlocks.new.subtitle') %></p>
    </div>

    <!-- Main Card -->
    <div class="bg-white/80 backdrop-blur-sm rounded-3xl shadow-xl border border-white/20 p-8 md:p-10 hover:shadow-2xl transition-all duration-300">
      <!-- Error Messages -->
      <%= render_form_errors(resource) %>

      <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }, data: { controller: "submitter" }, class: "space-y-6") do |f| %>
        
        <!-- Email Field -->
        <div class="space-y-3">
          <%= f.label :email, "ðŸ“§ #{t('devise.unlocks.new.email_label')}", class: "block text-sm font-semibold text-gray-700 mb-3" %>
          <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email",
                placeholder: t('devise.unlocks.new.email_placeholder'),
                class: "w-full px-5 py-4 rounded-2xl border-2 border-gray-200 focus:border-amber-500 focus:ring-4 focus:ring-amber-100 transition-all duration-200 text-base placeholder-gray-400 bg-gray-50/50" %>
        </div>

        <!-- Submit Button -->
        <div class="pt-4">
          <button type="submit" data-submitter-target="btn"
                  class="w-full bg-amber-500 hover:bg-amber-600 text-white font-semibold py-3 px-6 rounded-2xl shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200 flex items-center justify-center space-x-2 disabled:opacity-60 disabled:cursor-not-allowed disabled:transform-none">
            <span data-submitter-target="label" class="text-base">ðŸ”“ <%= t('devise.unlocks.new.submit_button') %></span>
            <svg data-submitter-target="spinner" class="hidden w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </button>
        </div>
      <% end %>

      <!-- Info Box -->
      <div class="mt-6 bg-amber-50 border border-amber-200 rounded-xl p-4">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-amber-800">
              <%= t('devise.unlocks.new.info_title') %>
            </h3>
            <div class="mt-2 text-sm text-amber-700">
              <p>â€¢ <%= t('devise.unlocks.new.info_items.consecutive_failures') %></p>
              <p>â€¢ <%= t('devise.unlocks.new.info_items.check_email') %></p>
              <p>â€¢ <%= t('devise.unlocks.new.info_items.auto_unlock') %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Links -->
      <div class="mt-8 text-center space-y-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
