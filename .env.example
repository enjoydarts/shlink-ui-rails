# Rails環境設定
RAILS_ENV=production
SECRET_KEY_BASE=your-secret-key-base-64-characters-minimum

# Database Configuration
DATABASE_HOST=your-database-host
DATABASE_NAME=shlink_ui_rails_production
DATABASE_USER=your-database-user
DATABASE_PASSWORD=your-database-password

# Shlink API Configuration
SHLINK_BASE_URL=https://your-shlink-server.com
SHLINK_API_KEY=your-shlink-api-key-here

# Google OAuth設定（オプション）
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# メール送信方式の選択
MAIL_DELIVERY_METHOD=smtp  # または mailersend

# SMTP Configuration (MAIL_DELIVERY_METHOD=smtp の場合)
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_DOMAIN=your-domain.com
SMTP_USER_NAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_AUTHENTICATION=plain
SMTP_ENABLE_STARTTLS_AUTO=true

# メール設定（共通）
MAIL_FROM=noreply@your-domain.com
MAIL_HOST=your-domain.com

# MailerSend設定（MAIL_DELIVERY_METHOD=mailersend の場合）
MAILERSEND_API_KEY=your-mailersend-api-key
MAILERSEND_DOMAIN=your-verified-domain.com
MAILERSEND_FROM_EMAIL=noreply@your-domain.com
MAILERSEND_FROM_NAME=Your App Name

# CAPTCHA設定（Cloudflare Turnstile）
TURNSTILE_SITE_KEY=your-turnstile-site-key
TURNSTILE_SECRET_KEY=your-turnstile-secret-key